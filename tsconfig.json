{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"typeRoots": ["node_modules/@types", "src/common/types"],
		"allowJs": false,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"*": ["./src/*", "./*"],
			"@components/*": ["./src/common/components/*"],
			"@styles/*": ["./src/common/styles/*"],
			"@hooks/*": ["./src/common/hooks/*"],
			"@store/*": ["./src/common/store/*"],
			"@types/*": ["./src/types/*"],
			"@queries/*": ["./src/common/queries/*"],
			"@layouts/*": ["./src/common/layouts/*"],
			"@api/*": ["./src/common/api/*"],
			"@ui/*": ["./src/ui/*"],
			"@utils/*": ["./src/utils/*"],
			"@utils": ["./src/utils"]
		}
	},
	"include": [
		"next-env.d.ts",
		"next.config.js",
		".next/types/**/*.ts",
		"./src/**/*.d.ts",
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"./app/**/*.d.ts",
		"./app/**/*.ts",
		"./app/**/*.tsx",
		"./app/*.tsx",
		"./app/**/*.tsx"
	],
	"exclude": ["node_modules", ".next"]
}
